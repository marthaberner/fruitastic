<h2>Add A Car</h2>
<%= form_for @car do |f| %>

  <p>
    <%= f.label :model, class: "form-label" %>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :year, class: "form-label" %>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.submit "Add Car", class: "form-button" %>
  </p>
<% end %>

<table width="500" border="black">
  <thead>
  <caption><h2>Cars</h2></caption>
  <th>Model</th>
  <th>Year</th>
  </thead>
  <tbody>
  <% @cars.each do |car| %><tr>
    <td><%= link_to car.model, car_path(car) %></td>
    <td><%= car.year %></td>
    </tr>
    <% end %>
  </tbody>
</table>