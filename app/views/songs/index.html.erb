<%= form_for @song do |f| %>
  <% if @song.errors.present? %>
    <div class="errors">
      <h1>Crap, that's not right!</h1>
      <ul class="erros-list">
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
  <%= f.label :artist, class: "form-label" %>
  <%= f.text_field :artist %>
</p>

<p>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.submit "Add Song", class: "form-button" %>
</p>

<% end %>

<table width="500" border="black">
<caption><h2>Songs</h2></caption>
  <thead>
  <th>Artist</th>
  <th>Title</th>
  </thead>
  <tbody>
  <% @songs.each do |song| %>
  <tr>
    <td><%= link_to song.artist, song_path(song) %></td>
    <td><%= song.title %></td>
    <% end %>
  </tr>
  </tbody>
</table>
